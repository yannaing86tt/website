  border:1px solid var(--border);
  background: var(--panel);
}
th, td{
  border-bottom:1px solid var(--border);
}

/* ===== force show theme toggle ===== */
.header-inner{ justify-content: space-between; }
.nav{ margin-left: 0 !important; }
