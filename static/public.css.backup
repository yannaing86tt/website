}

html[data-theme="light"] .article a{
  color: rgba(37,99,235,.92) !important;
}

html[data-theme="light"] .article blockquote,
html[data-theme="light"] .note,
html[data-theme="light"] .callout{
  background: rgba(13,18,32,.04) !important;
  border-color: rgba(13,18,32,.14) !important;
}

/* ===== Force dark-only mode ===== */
html{ color-scheme: dark; }
:root{
  --bg: #070a12;
  --bg2: #0b1020;
  --text: rgba(232,238,252,.92);
  --muted: rgba(232,238,252,.72);
  --border: rgba(255,255,255,.14);
  --panel: rgba(255,255,255,.06);
  --panel2: rgba(255,255,255,.09);
}

/* =========================
   HERO ANIMATION (dark-only)
   ========================= */

/* smooth */
.hero, .hero *{
  transition: transform .25s ease, background .25s ease, border-color .25s ease, box-shadow .25s ease, opacity .25s ease;
}

/* make sure hero can hold pseudo elements */
.hero{
  position: relative;
  overflow: hidden;
  isolation: isolate;
}

/* animated soft orbs */
.hero::before,
.hero::after{
  content:"";
  position:absolute;
  inset:-40%;
  z-index:-1;
  background:
    radial-gradient(closest-side at 25% 30%, rgba(125,211,252,.40), transparent 60%),
    radial-gradient(closest-side at 72% 40%, rgba(167,139,250,.32), transparent 62%),
    radial-gradient(closest-side at 45% 75%, rgba(34,211,238,.18), transparent 65%);
  filter: blur(18px);
  opacity: .75;
  transform: translate3d(0,0,0);
  animation: heroFloat 12s ease-in-out infinite;
}

.hero::after{
  opacity:.55;
  filter: blur(30px);
  animation: heroFloat2 16s ease-in-out infinite;
}

/* subtle shimmer layer */
.hero .hero-shimmer{
  pointer-events:none;
  position:absolute;
  inset:0;
  border-radius: inherit;
  background: linear-gradient(110deg,
    transparent 0%,
    rgba(255,255,255,.06) 35%,
    transparent 70%);
  mix-blend-mode: overlay;
  opacity:.55;
  transform: translateX(-35%);
  animation: heroShimmer 7.5s ease-in-out infinite;
}

/* hover = a bit more alive */
.hero:hover{
  transform: translateY(-1px);
  box-shadow: 0 22px 55px rgba(0,0,0,.55);
}
.hero:hover::before{ opacity:.85; }
.hero:hover .hero-shimmer{ opacity:.70; }

/* reduce motion support */
@media (prefers-reduced-motion: reduce){
  .hero::before, .hero::after, .hero .hero-shimmer{ animation: none !important; }
}

@keyframes heroFloat{
  0%   { transform: translate(-2%, -1%) scale(1.00) rotate(0deg); }
  50%  { transform: translate(3%,  2%) scale(1.05) rotate(8deg); }
  100% { transform: translate(-2%, -1%) scale(1.00) rotate(0deg); }
}
@keyframes heroFloat2{
  0%   { transform: translate(2%, 1%) scale(1.02) rotate(0deg); }
  50%  { transform: translate(-3%, -2%) scale(1.07) rotate(-10deg); }
  100% { transform: translate(2%, 1%) scale(1.02) rotate(0deg); }
}
@keyframes heroShimmer{
  0%   { transform: translateX(-40%); opacity:.45; }
  50%  { transform: translateX(40%);  opacity:.70; }
  100% { transform: translateX(-40%); opacity:.45; }
}

