  backdrop-filter: blur(14px);
  -webkit-backdrop-filter: blur(14px);
  background: linear-gradient(180deg, rgba(8,12,22,.72), rgba(8,12,22,.35));
  border-bottom: 1px solid rgba(255,255,255,.10);
}
.header-inner{
  padding: 14px 0;
}
.brand{
  letter-spacing: .2px;
  font-weight: 750;
  opacity: .96;
}
.nav{
  gap: 14px;
}
.nav a{
  padding: 8px 12px;
  border-radius: 999px;
  border: 1px solid transparent;
  background: transparent;
  opacity: .78;
}
.nav a:hover{
  opacity: 1;
  background: rgba(255,255,255,.06);
  border-color: rgba(255,255,255,.10);
}

/* hero: premium surface + softer animation (no "solid orb") */
.hero{
  border-radius: 26px;
  padding: 34px;
  border: 1px solid rgba(255,255,255,.10);
  background:
    radial-gradient(1200px 600px at 15% 15%, rgba(59,130,246,.16), transparent 60%),
    radial-gradient(900px 520px at 80% 20%, rgba(168,85,247,.14), transparent 62%),
    linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.035));
  box-shadow:
    0 24px 70px rgba(0,0,0,.55),
    inset 0 1px 0 rgba(255,255,255,.06);
}

/* replace your earlier before/after look with softer blobs */
.hero::before,
.hero::after{
  content:"";
  position:absolute;
  inset:-55%;
  z-index:-1;
  background:
    radial-gradient(700px 420px at 18% 30%, rgba(125,211,252,.26), transparent 65%),
    radial-gradient(680px 420px at 78% 34%, rgba(167,139,250,.22), transparent 67%),
    radial-gradient(620px 420px at 50% 78%, rgba(34,211,238,.12), transparent 70%);
  filter: blur(42px);
  opacity: .65;
  animation: heroFloat 14s ease-in-out infinite;
}
.hero::after{
  opacity:.45;
  filter: blur(64px);
  animation: heroFloat2 18s ease-in-out infinite;
}

/* hero typography */
.hero h1{
  margin: 0 0 10px;
  font-size: clamp(34px, 3.6vw, 56px);
  line-height: 1.08;
  letter-spacing: -0.6px;
}
.hero p{
  max-width: 62ch;
  font-size: 16.5px;
  opacity: .84;
}

/* buttons: more premium */
.btn, .btn.primary, .btn.ghost, .btn-primary{
  border-radius: 16px;
  padding: 12px 16px;
  border: 1px solid rgba(255,255,255,.14);
  background: rgba(255,255,255,.06);
  box-shadow: inset 0 1px 0 rgba(255,255,255,.06);
}
.btn:hover, .btn-primary:hover{
  transform: translateY(-1px);
  background: rgba(255,255,255,.09);
  border-color: rgba(255,255,255,.18);
}

/* cards: consistent, premium, stretch */
.posts-grid, .latest-grid, .card-grid, .grid{
  align-items: stretch;
}
.card{
  border-radius: 22px;
  border: 1px solid rgba(255,255,255,.11);
  background: rgba(255,255,255,.05);
  box-shadow:
    0 16px 45px rgba(0,0,0,.40),
    inset 0 1px 0 rgba(255,255,255,.05);
  overflow: hidden;
  height: 100%;
}
.card:hover{
  transform: translateY(-3px);
  border-color: rgba(255,255,255,.16);
  box-shadow: 0 22px 60px rgba(0,0,0,.52);
}
.card img{
  width: 100%;
  height: 170px;
  object-fit: cover;
  display:block;
}
.card h3, .card .title{
  letter-spacing: -0.2px;
}
.card p, .card .excerpt{
  opacity: .78;
}

/* clamp text so cards stay equal */
.card .excerpt, .card p{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.card h3, .card .title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* keep shimmer but subtle */
.hero .hero-shimmer{
  opacity: .45;
}

/* motion */
@keyframes heroFloat{
  0%   { transform: translate(-2%, -1%) scale(1.00) rotate(0deg); }
  50%  { transform: translate(3%,  2%) scale(1.04) rotate(7deg); }
  100% { transform: translate(-2%, -1%) scale(1.00) rotate(0deg); }
}
@keyframes heroFloat2{
  0%   { transform: translate(2%, 1%) scale(1.02) rotate(0deg); }
  50%  { transform: translate(-3%, -2%) scale(1.06) rotate(-9deg); }
  100% { transform: translate(2%, 1%) scale(1.02) rotate(0deg); }
}

/* reduce motion */
@media (prefers-reduced-motion: reduce){
  .hero::before, .hero::after, .hero .hero-shimmer{ animation:none !important; }
  .card:hover, .btn:hover{ transform:none !important; }
}

/* =========================
   BACKGROUND SEAM FIX
   ========================= */

/* 1) page background: single smooth layer (no hard banding) */
html, body{
  background: radial-gradient(1200px 900px at 20% 15%, rgba(59,130,246,.12), transparent 62%),
              radial-gradient(900px 700px at 82% 22%, rgba(168,85,247,.10), transparent 64%),
              radial-gradient(900px 700px at 52% 88%, rgba(34,211,238,.07), transparent 66%),
              linear-gradient(180deg, #070a12 0%, #070a12 35%, #060811 100%) !important;
  background-attachment: fixed;
}

/* 2) remove any section background that causes a split line */
main, .page, .content, .container{
  background: transparent !important;
}

/* 3) cards/blocks keep their glass surface but no “half/half” band */
.card, .panel, .note, .callout, .article, .hero{
  background-image: none !important;
  background-color: rgba(255,255,255,.05) !important;
}

/* hero still needs premium glow: keep via pseudo elements only */
.hero{
  background-color: rgba(255,255,255,.045) !important;
}

/* (optional) reduce banding on mobile devices */
@media (max-width: 720px){
  html, body{ background-attachment: scroll; }
}


