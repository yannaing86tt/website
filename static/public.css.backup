  --panel2: rgba(255,255,255,.09);
  --shadow: 0 18px 40px rgba(0,0,0,.45);
  --brandA: rgba(125,211,252,.35);
  --brandB: rgba(167,139,250,.28);
}

html[data-theme="light"]{
  --bg: #f6f7fb;
  --bg2: #ffffff;
  --text: rgba(13,18,32,.92);
  --muted: rgba(13,18,32,.70);
  --border: rgba(13,18,32,.12);
  --panel: rgba(13,18,32,.04);
  --panel2: rgba(13,18,32,.07);
  --shadow: 0 18px 40px rgba(13,18,32,.12);
  --brandA: rgba(59,130,246,.18);
  --brandB: rgba(168,85,247,.14);
}

/* global */
body{
  background:
    radial-gradient(900px 600px at 10% 10%, var(--brandA), transparent 60%),
    radial-gradient(800px 520px at 90% 18%, var(--brandB), transparent 60%),
    linear-gradient(180deg, var(--bg), var(--bg2)) !important;
  color: var(--text) !important;
}

a{ color: var(--text); }
a:hover{ opacity:.92; }

/* header polish */
.header{
  background: rgba(0,0,0,.00);
}
.header-inner{
  display:flex;
  align-items:center;
  gap:12px;
}
.brand{
  font-weight:800;
  letter-spacing:.2px;
}
.nav{
  margin-left:auto;
  display:flex;
  gap:10px;
  align-items:center;
  flex-wrap:wrap;
}
.nav a{
  padding:8px 12px;
  border-radius:999px;
  border:1px solid var(--border);
  background: var(--panel);
  text-decoration:none;
  color: var(--text);
}
.nav a:hover{ background: var(--panel2); transform: translateY(-1px); }

/* theme toggle button */
.theme-toggle{
